<UserControl x:Class="MarvinsAIRARefactored.Controls.Switch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarvinsAIRARefactored.Controls"
             mc:Ignorable="d">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Click="Button_Click">
            <Grid>
                <Image x:Name="OffImage" Source="/MarvinsAIRARefactored;component/artwork/switch_off.png" Visibility="Visible"/>
                <Image x:Name="OnImage" Source="/MarvinsAIRARefactored;component/artwork/switch_on.png" Visibility="Hidden"/>
            </Grid>
        </Button>

        <Label Grid.Column="1" Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="#FFFFFFFF" Margin="10,0,0,0" Cursor="Hand" MouseDown="Button_Click"/>

    </Grid>

</UserControl>
